<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/backgroundImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#77000000"
        tools:layout_editor_absoluteX="-4dp"
        tools:layout_editor_absoluteY="0dp" />


    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="404dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="16dp"
        android:inputType="text"
        android:hint="Device name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        android:textColor="@color/teal_200"
        android:textColorHint="#EBFFFFFF"
        />


    <EditText
        android:id="@+id/macAddressEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="MAC address"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/nameEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        android:textColor="@color/teal_200"
        android:textColorHint="#EBFFFFFF"/>

    <EditText
        android:id="@+id/hostnameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="FTP Hostname"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/macAddressEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/teal_200"
        android:textColorHint="#EBFFFFFF"
         />

    <!--<EditText
        android:id="@+id/usernameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        app:layout_constraintTop_toBottomOf="@id/hostnameEditText"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="smallbusiness" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/usernameEditText"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="sm@LL123" /> -->

    <EditText
        android:id="@+id/ssidEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="SSID"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/hostnameEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/teal_200"
        android:textColorHint="#EBFFFFFF"/>

    <EditText
        android:id="@+id/passwordssidEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="SSID password"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/ssidEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/teal_200"
        android:textColorHint="#EBFFFFFF"/>

    <Button
        android:id="@+id/uploadButton"
        style="@style/ButtonStyle"
        android:layout_width="375dp"
        android:layout_height="48dp"
        android:backgroundTint="#E6FFFFFF"
        android:text="Upload configuration"
        app:layout_constraintTop_toBottomOf="@id/passwordssidEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="25dp" />

    <Button
        android:id="@+id/downloadButton"
        style="@style/ButtonStyle"
        android:layout_width="375dp"
        android:layout_height="48dp"
        android:backgroundTint="#E6FFFFFF"
        android:text="Download MAC address"
        app:layout_constraintTop_toBottomOf="@id/uploadButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/addButton"
        style="@style/ButtonStyle"
        android:layout_width="384dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#E6FFFFFF"
        android:text="Add new device"
        app:layout_constraintTop_toBottomOf="@id/downloadButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
