<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#21000000">



    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#77000000" />

    <TextView
        android:id="@+id/tokenTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/token"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="184dp"
        tools:layout_editor_absoluteY="92dp"
        android:layout_row="2"
        android:layout_column="0"
        android:paddingTop="16dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="382dp"
        android:layout_height="70dp"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="center_horizontal"
        android:paddingTop="16dp"
        android:text="@string/token"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textColorHint="#EBFFFFFF"
        />

    <Button
        android:id="@+id/button_chart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Condition Monitor"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/emailTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/ButtonStyle"
        android:textColorHint="#EBFFFFFF"/>
    <Button
        android:id="@+id/button_notifications"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Notifications"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/button_chart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/ButtonStyle"
        android:textColorHint="#EBFFFFFF"/>
    <Button
        android:id="@+id/button_FTPActivity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Add device"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/button_notifications"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/ButtonStyle"
        android:textColorHint="#EBFFFFFF"/>
    <Button
        android:id="@+id/button_Settings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Settings"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/button_FTPActivity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/ButtonStyle"
        android:textColorHint="#EBFFFFFF"/>

</androidx.constraintlayout.widget.ConstraintLayout>